    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <%= javascript_include_tag "/assets/global/plugins/jquery.min.js" %>

    
    <%= javascript_include_tag "/assets/script/hucommd.js" %>
    <%= stylesheet_link_tag "/assets/global/plugins/font-awesome/css/font-awesome.min.css"  %>
    <%= stylesheet_link_tag "/assets/global/plugins/bootstrap/css/bootstrap.min.css"  %>
    <%= stylesheet_link_tag "/assets/global/css/components.min.css"  %>
    <%= stylesheet_link_tag "/assets/pages/css/login.min.css"  %>
    <link rel="shortcut icon" href="/favicon.ico" />
    <style>
.weixin-tip {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            filter: alpha(opacity=80);
            height: 100%;
